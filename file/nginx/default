# located in /etc/nginx/sites-enabled/default

server {
        listen 80 default_server;
        listen [::]:80 default_server;

        server_name "~^(?<sub>.+)\.berict\.com$";

        if ($sub ~ "(www)$") {
            return 301 http://berict.com$request_uri;
        }

        root /berict/$sub;

        index index.html;

        location / {
                try_files $uri $uri/ =404;
        }
}